@model NexTrends.Models.Customer

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="mt-0">
    <div class="container my-5">

        <div class="row justify-content-center">
            <div class="col-md-6">
              
                <div class="card shadow-lg" style="padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(255, 165, 0, 0.5);">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Login</h2>
                        @if (TempData["MSG"] != null)
                        {
                            <div class="alert alert-info">
                                @TempData["MSG"]
                            </div>
                        }

                        <form asp-action="Login" method="post" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" name="email" class="form-control" placeholder="Enter your email" autocomplete="off" required/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" type="password" name="password" class="form-control" placeholder="Enter your password" autocomplete="off" required/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Login" class="btn btn-warning btn-block" style="background-color: orange; border-color: orange;" />
                            </div>
                        </form>

                        <div class="mt-3 text-center">
                            <a asp-controller="Account" asp-action="Register">Don't have an account? Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
