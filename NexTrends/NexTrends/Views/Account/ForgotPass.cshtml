@model NexTrends.Models.Customer

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="mt-0">
    <div class="container my-5">

        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card shadow-lg" style="padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(255, 165, 0, 0.5);">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Forgot Password</h2>
                        @if (TempData["MSG"] != null)
                        {
                            <div class="alert alert-info">
                                @TempData["MSG"]
                            </div>
                        }

                        <form asp-asp-controller="Account" asp-action="ForgotPass" method="post"  autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" name="email" class="form-control" placeholder="Enter your email" autocomplete="off" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Get OTP" class="btn btn-warning btn-block" style="background-color: orange; border-color: orange;" />
                            </div>
                        </form>
                        <br />
                        <form asp-controller="Account" asp-action="ForgotVerifyOTP" method="post">
                            <div class="d-flex justify-content-center mb-4">
                                <input type="text" class="form-control otp-input mx-1" id="otp0" name="otp0" maxlength="1" required />
                                <input type="text" class="form-control otp-input mx-1" id="otp1" name="otp1" maxlength="1" required />
                                <input type="text" class="form-control otp-input mx-1" id="otp2" name="otp2" maxlength="1" required />
                                <input type="text" class="form-control otp-input mx-1" id="otp3" name="otp3" maxlength="1" required />
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Verify OTP" class="btn btn-warning btn-block" style="background-color: orange; border-color: orange;" />
                            </div>
                        </form>
                        
                        <p class="text-center text-muted mt-4">
                            Didn't receive the OTP? <a asp-controller="Account" asp-action="ResendOTP" class="text-primary">Resend</a>
                        </p>
                        <div class="mt-3 text-center">
                            <a asp-controller="Account" asp-action="Register">Don't have an account? Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f5f6fa;
        font-family: 'Roboto', sans-serif;
    }

    .card {
        background-color: white;
        border: none;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: rem;
        text-align: center;
    }

    h2 {
        color: #333;
        font-weight: 700;
    }

    h3 {
        color: #444;
        font-weight: 600;
    }

    .otp-input {
        width: 60px;
        height: 60px;
        font-size: 24px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

        .otp-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn-primary {
        background-color: #007bff;
