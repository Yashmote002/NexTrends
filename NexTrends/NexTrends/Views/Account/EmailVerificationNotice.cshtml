@{
    ViewData["Title"] = "Email Verification Notice";
}

<h2 class="text-center mt-4">Verify Your Email</h2>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4" style="border-radius: 16px;">
                <div class="card-body">
                    <h3 class="text-center mb-4">Enter OTP</h3>
                    <p class="text-center text-muted mb-3">We have sent a 4-digit code to your email. Please enter it below to verify your email address.</p>
                    
                    <form asp-controller="Account" asp-action="VerifyOTP" method="post">
                        <div class="d-flex justify-content-center mb-4">
                            <input type="text" class="form-control otp-input mx-1" id="otp0" name="otp0" maxlength="1" required />
                            <input type="text" class="form-control otp-input mx-1" id="otp1" name="otp1" maxlength="1" required />
                            <input type="text" class="form-control otp-input mx-1" id="otp2" name="otp2" maxlength="1" required />
                            <input type="text" class="form-control otp-input mx-1" id="otp3" name="otp3" maxlength="1" required />
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary w-100 btn-lg">Verify OTP</button>
                    </form>

                    <p class="text-center text-muted mt-4">
                        Didn't receive the OTP? <a asp-controller="Account" asp-action="ResendOTP" class="text-primary">Resend</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

