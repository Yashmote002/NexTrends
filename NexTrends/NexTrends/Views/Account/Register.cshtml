@model NexTrends.Models.Customer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="mt-0">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg" style="padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Register</h2>

                        <form asp-controller="Account" asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3">
                            </div>

                            @if (TempData["MSG"] != null)
                            {
                                <div class="alert alert-info">
                                    @TempData["MSG"]
                                </div>
                            }

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="form-label">Name</label>
                                        <input asp-for="Name" class="form-control" name="Name" placeholder="Enter your name" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" name="Email" placeholder="Enter your email" type="email" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Phone" class="form-label">Phone</label>
                                <input asp-for="Phone" class="form-control" name="Phone" placeholder="Enter your phone number" type="tel" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input asp-for="Address" class="form-control" name="Address" placeholder="Enter your address" required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Gender" class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-control" name="Gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Pincode" class="form-label">Pincode</label>
                                <input asp-for="Pincode" class="form-control" name="Pincode" placeholder="Enter your pincode" type="text" required />
                                <span asp-validation-for="Pincode" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" class="form-control" name="Pass" type="password" placeholder="Enter your password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            @if (TempData["OTP_SENT"] != null)
                            {
                                <div class="form-group mb-3">
                                    <label for="otp">Enter OTP:</label>
                                    <input type="text" id="otp" name="Otp" class="form-control" placeholder="Enter OTP" required />
                                   
                                </div>
                            }

                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary w-100">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
