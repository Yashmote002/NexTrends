@model NexTrends.Models.Customer

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="mt-0">
    <div class="container my-5">

        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card shadow-lg" style="padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(255, 165, 0, 0.5);">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4">Reset Password</h2>
                        @if (TempData["MSG"] != null)
                        {
                            <div class="alert alert-info">
                                @TempData["MSG"]
                            </div>
                        }

                        <form asp-controller="Account" asp-action="ResetPassword" method="post" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label  class="form-label"></label>
                                <input  type="password" name="password" class="form-control" placeholder="Enter Password" autocomplete="off" required />
                              
                            </div>

                            <div class="form-group mb-4">
                                <label  class="form-label"></label>
                                <input  type="password" name="Cpassword" class="form-control" placeholder="Confirm password" autocomplete="off" required />
                           
                            </div>

                            <div class="d-grid">
                                <input type="submit" value="Save Changes" class="btn btn-warning btn-block" style="background-color: orange; border-color: orange;" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
