@{
    ViewData["Title"] = "Order Success";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card text-center shadow-lg" style="max-width: 500px; width: 100%; border-radius: 15px;">
        <div class="card-body">
            <img src="~/assets/images/check.jfif" alt="Order Success" class="img-fluid mb-3" style="max-width: 100px;">
            <h1 class="display-6">Your Order is Successfully Placed!</h1>
            <p class="lead">Thank you for shopping with us. Your order has been placed successfully.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
    </div>
</div>
