@model NexTrends.Models.Coupon

@{
    Layout = "_LayoutAdmin";
}

<h2>Delete Coupon</h2>

<div class="container mt-5">
    <h4>Are you sure you want to delete this coupon?</h4>
    <dl class="row">
        <dt class="col-sm-2">Coupon Code</dt>
        <dd class="col-sm-10">@Model.CouponCode</dd>
        <dt class="col-sm-2">Discount Percentage</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage</dd>
        <dt class="col-sm-2">Expiry Date</dt>
        <dd class="col-sm-10">@Model.ExpiryDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Occasion</dt>
        <dd class="col-sm-10">@Model.Occasion</dd>
        <dt class="col-sm-2">Prize</dt>
        <dd class="col-sm-10">@Model.Prize</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("DisplayCoupon")" class="btn btn-secondary">Cancel</a>
    </form>


</div>
