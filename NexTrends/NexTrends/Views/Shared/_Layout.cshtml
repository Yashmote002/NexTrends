<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/26.2.4/material.css" />
   
    <link href="https://cdn.syncfusion.com/ej2/19.4.0.56/styles/material.css" rel="stylesheet" />
    <script src="https://cdn.syncfusion.com/ej2/19.4.0.56/dist/ej2.min.js"></script>
    

    <title>@ViewData["Title"] - NexTrends</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
    <link href="https://cdn.syncfusion.com/ej2/26.2.4/bootstrap5-dark.css" rel="stylesheet" />
    

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-sixteen.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <link rel="stylesheet" href="~/css/site.css">

   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- In _Layout.cshtml or in the <head> of your page -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.syncfusion.com/ej2/26.2.4/dist/ej2.min.js"></script>



</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Header -->
    <header class="navbar">
        <nav class="navbar navbar-expand-lg navbar sticky-top" style="margin-left:auto; margin-right:auto">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <h2>NexTrends <em>Clothing</em></h2>
                </a>
                <form asp-controller="CSearch" asp-action="SearchResult" class="d-flex position-relative" role="search">
                    <input class="form-control pe-5 ps-5" type="text" name="SearchPr" placeholder="Search" aria-label="Search" style="-webkit-border-bottom-right-radius:0px;-webkit-border-top-right-radius:0px">
                    <button class="btn" type="submit" style="
            border: 2px solid #ff5f00; /* Saffron border color */
            color:  #ff5f00; /* Saffron text color */
            background-color: transparent; /* Transparent background */
            transition: all 0.3s ease; /* Smooth transition */
        " onmouseover="this.style.backgroundColor='#f4c542'; this.style.color='white'; this.style.borderColor='#f4c542'; this.querySelector('i').style.border='2px solid white';-webkit-border-bottom-left-radius:0px;-webkit-border-top-left-radius:0px;" onmouseout="this.style.backgroundColor='transparent'; this.style.color='#f4c542'; this.style.borderColor='#f4c542'; this.querySelector('i').style.border='none';">
                        <i class="fas fa-search" style="border: none;"></i>
                    </button>
                </form>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("ProductsList", "UserProduct", new { id = 1 })">
                                Men
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("ProductsList", "UserProduct", new { id = 2 })">
                                Women
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("ProductsList", "UserProduct", new { id = 3 })">
                                Kids
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button">
                                <i class="bi bi-person-circle"></i> <!-- Profile Icon -->
                                <span class="d-none d-md-inline ms-2">Account</span> <!-- "Account" Label -->
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="CProfile">Profile</a></li>
                                
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ms-3">
                            <a class="nav-link" asp-controller="Cart" asp-action="ShowCart">
                                <i class="bi bi-cart"></i> <!-- Cart Icon -->
                                <span class="d-none d-md-inline ms-2">Cart</span> <!-- "Cart" Label -->
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
 </header>
    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="inner-content">
                        <p>
                            Copyright &copy; 2020 NexTrends Co., Ltd.
                            - Design: <a rel="nofollow noopener" href="https://templatemo.com" target="_blank">TemplateMo</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/slick.js"></script>
    <script src="~/assets/js/isotope.js"></script>
    <script src="~/assets/js/accordions.js"></script>

    <script>
        document.querySelector('.dropdown-toggle').addEventListener('click', function () {
            const dropdownMenu = this.nextElementSibling;
            dropdownMenu.classList.toggle('show');
        });
    </script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //if the field is cleared, the cleared flag is set
            if (!cleared[t.id]) {
                cleared[t.id] = 1;               //set cleared flag
                t.value = '';
                t.style.color = '#000';
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>

</html>
